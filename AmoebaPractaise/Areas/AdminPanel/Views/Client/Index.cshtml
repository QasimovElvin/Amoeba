
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@model IEnumerable<Client>
<div class="d-flex justify-content-end mr-2 mb-3">
    <a class="btn btn-success" asp-controller="Client" asp-action="Create">Create About</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Client table</h4>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Profession
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                              Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    <img src="~/assets/img/@item.Image" class="img-fluid" alt="">
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                   @item.profession.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="mdi mdi-delete-sweep"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="mdi mdi-border-color"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



