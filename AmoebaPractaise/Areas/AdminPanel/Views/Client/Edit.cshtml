@{
    ViewData["Title"] = "Edit";
}
@model Client
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Client</h4>
            <form class="forms-sample" asp-action="Edit" asp-controller="Client" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ImageFile">Image</label>
                    <input asp-for="ImageFile" placeholder="Image">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessionId">Profession</label>
                    <select asp-for="ProfessionId" asp-items="new SelectList(ViewBag.Profession,nameof(Profession.Id),nameof(Profession.Name))"></select>
                    <span asp-validation-for="ProfessionId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>
                <div asp-validation-summary="ModelOnly">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>

